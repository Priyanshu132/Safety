<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">

            <Button
                android:id="@+id/profile"
                android:layout_width="135dp"
                android:layout_height="135dp"
                android:background="@drawable/button_bg"
                android:text="Your Profile"
                android:textSize="13dp"
                android:drawableTop="@drawable/profile"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:paddingTop="20dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >

            <Button
                android:id="@+id/recorded_audio"
                android:layout_width="135dp"
                android:layout_height="135dp"
                android:background="@drawable/button_bg"
                android:text="Your \nRecorded Audio"
                android:textSize="13dp"
                android:drawableTop="@drawable/record_voice"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:paddingTop="20dp"/>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginHorizontal="10dp"
        android:weightSum="2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >

            <Button
                android:id="@+id/all_contacts"
                android:layout_width="135dp"
                android:layout_height="135dp"
                android:background="@drawable/button_bg"
                android:text="Your Emergency contacts"
                android:textSize="13dp"
                android:drawableTop="@drawable/contacts"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:paddingTop="20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            >

            <Button
                android:id="@+id/add_contact"
                android:layout_width="135dp"
                android:layout_height="135dp"
                android:background="@drawable/button_bg"
                android:text="Add contact \nfrom List"
                android:textSize="13dp"
                android:drawableTop="@drawable/add_contact"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:paddingTop="20dp"/>

        </LinearLayout>
    </LinearLayout>


    <Button
        android:layout_width="200dp"
        android:layout_marginTop="20dp"
        android:layout_height="60dp"
        android:visibility="gone"
        android:text="Test app"
        android:id="@+id/test"/>
    <Button
        android:layout_width="200dp"
        android:layout_marginTop="20dp"
        android:layout_height="60dp"
        android:text="Activate"
        android:id="@+id/activate"/>
    <Button
        android:layout_width="200dp"
        android:layout_marginTop="20dp"
        android:layout_height="60dp"
        android:text="Deactivate"
        android:visibility="gone"
        android:id="@+id/deactivate"/>



</LinearLayout>